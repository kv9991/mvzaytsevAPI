{
  "compilerOptions": {
    "target": "es6",
    "module": "es6",
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./",
    "paths": {
      "@routes/*": ["./routes/*"],
      "@consts/*": ["./consts/*"],
      "@middlewares/*": ["./middlewares/*"],
      "@transactions/*": ["./transactions/*"],
      "@utils/*": ["./utils/*"],
      "@email/*": ["./email/*"],
      "@models/*": ["./models/*"],
      "@root/*": ["./*"]
    }
  },
  "exclude": ["node_modules", ".git"]
}
